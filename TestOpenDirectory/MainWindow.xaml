<Window x:Class="TestOpenDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestOpenDirectory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="pathTextBox" Height="23" Margin="0,0,0,10" />
            <Button Content="Parcourir..." Click="OnBrowseButtonClick" Margin="0,0,0,10"/>
            <Label x:Name="selectedPathLabel"/>
        </StackPanel>
    </Grid>
</Window>
