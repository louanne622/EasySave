<Window x:Class="TestRecupTab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Name="btnExecute" Content="Exécuter" Click="BtnExecute_Click" Margin="5"/>

        <ListView Grid.Row="1" Name="lvItems" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="100"/>
                    <GridViewColumn Header="Source" DisplayMemberBinding="{Binding Source}" Width="200"/>
                    <GridViewColumn Header="Cible" DisplayMemberBinding="{Binding Cible}" Width="200"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>